<GroupScreen>:
	BoxLayout:
		orientation: 'vertical'
		Label:
			text: "Выбери свою армию"
			font_size: 30
		GroupButton:
			text: 'Весь класс'
			on_release:
				root.groupAll(root)
				root.manager.current = 'all'
		GroupButton:
			text: 'Группа 1 (Хлопенова)'
			on_release:
				root.group1(root)
				root.manager.current = 'first'
		GroupButton:
			text: 'Группа 2 (Богачева)'
			on_release:
				root.group2(root)
				root.manager.current = 'second'


